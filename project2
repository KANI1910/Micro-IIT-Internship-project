<body>
    <h1>Number Guessing Game</h1>
    <div class="container">
        <p>Guess a number between 1 and 100</p>
        <input type="number" id="guess" class="input-field" placeholder="Enter your guess">
        <button class="btn" onclick="checkGuess()">Guess</button>
        <div class="result" id="result"></div>
    </div>

    <script>
        let randomNumber = Math.floor(Math.random() * 100) + 1;
        let attempts = 0;

        function checkGuess() {
            let userGuess = document.getElementById("guess").value;
            let resultDiv = document.getElementById("result");
            attempts++;

            if (userGuess == randomNumber) {
                resultDiv.innerHTML = `ðŸŽ‰ Correct! You guessed it in ${attempts} attempts!`;
                resultDiv.style.color = "green";
            } else if (userGuess > randomNumber) {
                resultDiv.innerHTML = "ðŸ“‰ Too high! Try again.";
                resultDiv.style.color = "red";
            } else {
                resultDiv.innerHTML = "ðŸ“ˆ Too low! Try again.";
                resultDiv.style.color = "blue";
            }
        }
    </script>
</body>
